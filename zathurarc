# zathurarc

# settings
set adjust-open width
# set show-scrollbars true
set first-page-column 2
#set window-title-basename true
# set database sqlite
set recolor-keephue
set selection-clipboard clipboard


# key bindings
map [normal]     <F11> toggle_fullscreen
map [fullscreen] <F11> toggle_fullscreen
map [normal]     <C-l> reload
map [fullscreen] <C-l> reload

map [normal]     r rotate rotate-ccw
map [fullscreen] r rotate rotate-ccw

map [normal]     <PageUp>   navigate previous
map [normal]     <Left>   navigate previous
map [fullscreen] <PageUp>   navigate previous
map [fullscreen] <Left>   navigate previous
map [normal]     <PageDown> navigate next
map [normal]     <Right> navigate next
map [fullscreen] <PageDown> navigate next
map [fullscreen] <Right> navigate next

map [normal]     <A-1> set "first-page-column 1"
map [fullscreen] <A-1> set "first-page-column 1"
map [normal]     <A-2> set "first-page-column 2"
map [fullscreen] <A-2> set "first-page-column 2"

# Why are these only defined for normal mode by default?
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] d toggle_page_mode 2
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] <Down> scroll down
map [fullscreen] k scroll up
map [fullscreen] <Up> scroll up
map [fullscreen] <C-d> scroll half-down
map [fullscreen] <C-u> scroll half-up
map [fullscreen] <C-o> jumplist backward
map [fullscreen] <C-s> jumplist forward
map [normal]     <C-i> set recolor true

#map [normal]     ] G
#map [fullscreen] ] G
#map [fullscreen] [ gg
#map [normal] [ gg

#fonts
set font "Monaco for Powerline 9"

# colors
set default-fg "#FFFFFF"
set default-bg "#000000"

set recolor-darkcolor "#93A1A1"
set recolor-lightcolor "#002B36"
set recolor true
